{
    "csharp.preview.improvedLaunchExperience": true,
    "dotnet.automaticallyCreateSolutionInWorkspace": false,
    "dotnet.automaticallySyncWithActiveItem": true,
    "dotnet.previewSolution-freeWorkspaceMode": true,
    "dotnet.testWindow.useTestingPlatformProtocol": true,
    "pgsql.copilot.enable": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.agent.autoFix": true,
    "github.copilot.chat.copilotDebugCommand.enabled": true,
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "github.copilot.chat.languageContext.fix.typescript.enabled": true,
    "chat.instructionsFilesLocations": {
        ".github/instructions": true,
        ".github": true
    },
    "github.copilot.enable": {
        "markdown": true
    },
    "github.copilot.chat.agent.runTasks": true,
    "github.copilot.chat.agent.thinkingTool": true,
    "files.autoSave": "afterDelay",
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.organizeImports": "always"
    },
    "dotnetAcquisitionExtension.enablePreviewFeatures": true,
    "dotnetAcquisitionExtension.existingDotnetPath": [
        {
            "extensionId": "ms-dotnettools.csdevkit",
            "path": "/usr/bin/dotnet"
        },
        {
            "extensionId": "ms-dotnettools.vscodeintellicode-csharp",
            "path": "/usr/bin/dotnet"
        },
        {
            "extensionId": "ms-dotnettools.csharp",
            "path": "/usr/bin/dotnet"
        },
        {
            "extensionId": "ms-dotnettools.vscode-dotnet-runtime",
            "path": "/usr/bin/dotnet"
        },
        {
            "extensionId": "msazurermtools.azurerm-vscode-tools",
            "path": "/usr/bin/dotnet"
        },
        // WINDOWS
        {
            "extensionId": "ms-dotnettools.csharp",
            "path": "C:\\Program Files\\dotnet\\dotnet.exe"
        },
        {
            "extensionId": "ms-dotnettools.csdevkit",
            "path": "C:\\Program Files\\dotnet\\dotnet.exe"
        },
        {
            "extensionId": "visualstudiotoolsforunity.vstuc",
            "path": "C:\\Program Files\\dotnet\\dotnet.exe"
        }
    ],
    "cSpell.words": [
        "Enumerables"
    ]
}